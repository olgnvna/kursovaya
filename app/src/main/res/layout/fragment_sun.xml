<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center">

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:text="Выйти"
        android:textSize="16sp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="150dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:padding="12dp"
        android:text="Удалить бронирования"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logout"
        android:layout_centerVertical="true"
        android:layout_marginBottom="387dp"
        android:background="@color/transparent_color"
        android:gravity="center"
        android:padding="16dp"
        android:text="Давайте вместе отправимся в увлекательное путешествие! Исследуйте мир с нашим приложением, которое поможет вам спланировать идеальное приключение."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logout"
        android:layout_below="@+id/welcome"
        android:layout_centerInParent="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-350dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="170dp"
        android:background="@color/transparent_color">

        <TextView
            android:id="@+id/booking_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваши бронирования"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </ScrollView>



</RelativeLayout>
